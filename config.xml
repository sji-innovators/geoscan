<?xml version='1.0' encoding='utf-8'?>
<widget id="sg.edu.sji.geoscan" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>geoscan</name>
    <description>
        SJI GeoScan application.
    </description>
    <author email="chen.wei.en.james.ryan@sji.edu.sg" href="http://unknown-dev.com">
        James R. Chen
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon src="www/img/192x192.png" density="xxxhdpi" />
        <allow-intent href="market:*" />
    </platform>
</widget>
